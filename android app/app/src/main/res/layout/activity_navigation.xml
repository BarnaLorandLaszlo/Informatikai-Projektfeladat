<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFC0CA"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:text="Movie Recommendation"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/poster_border"
        android:scaleType="centerCrop"
        android:src="@drawable/sigmaboy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_container_bg"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="24dp">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/text_field_background"
            android:backgroundTint="#D6DFEB"
            android:text="Belépés"
            android:textAllCaps="false"
            android:textColor="#1A475F"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnMain2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/text_field_background"
            android:backgroundTint="#D6DFEB"
            android:text="Regisztráció"
            android:textAllCaps="false"
            android:textColor="#1A475F"
            android:textSize="18sp" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

