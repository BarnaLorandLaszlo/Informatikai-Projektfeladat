<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/csaponelkuli"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/home_png_kor" />

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_container_bg"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="22dp">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/text_field_background"
            android:backgroundTint="#e9e9e9"
            android:text="Belépés"
            android:textAllCaps="false"
            android:textColor="#1A475F"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnMain2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/text_field_background"
            android:backgroundTint="#e9e9e9"
            android:text="Regisztráció"
            android:textAllCaps="false"
            android:textColor="#1A475F"
            android:textSize="18sp" />


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

