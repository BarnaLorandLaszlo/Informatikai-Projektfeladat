<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="24dp"
    android:gravity="center">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAMF Giga Chad \n Mobil App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:letterSpacing="0.05"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sigmaboy"
        android:background="@drawable/poster_border" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_container_bg"
        android:padding="24dp"
        android:elevation="6dp"
        android:layout_marginBottom="24dp">


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belépés"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnMain2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regisztráció"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keresés"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szia Barna Loránd László"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_gravity="center_horizontal"
        android:paddingTop="12dp" />

</LinearLayout>

